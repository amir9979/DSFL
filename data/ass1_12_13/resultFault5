#include <iostream>
#include <cmath>
#include <fstream>
using namespace std;

/**********************************************************************
 * Name: readFile
 * Target: Read data from input file to corresponding variables
 * Input: Input variables hp,d,s
 * Result: 1 if successfully done, otherwise return 0
**********************************************************************/
bool readFile(int &hp, int &d, int &s){
	char* file_name = "input.txt";
	ifstream in;
	in.open(file_name);
	in >> hp;
	in >> d;
	in >> s;
	in.close();

	if (hp < 1 || hp > 999) return false;
	if (d < 1 || d > 1000) return false;
	if (s < 1 || s > 100) return false;

	return true;
}
/**********************************************************************
 * Name: display
 * Target: Display value of fOut in format of 0.XX
 * Input: Calculated Result pR
**********************************************************************/
void display(float pR){
	cout << pR;
}

/**********************************************************************
 * Name: main
 * Target: Implements your application
 **********************************************************************/
int main() {

	//Declare variables
	int hp = 0;
	int d = 0;
	int s = 0;
	float P1 = 0;
	float P2 = 0;
	float pR = -1; //No valid
	float f;


	//Input data
	if(readFile(hp, d, s)){

			int i,T,g,n,m,a=0,b=1,c=0;
			for(i=2;i<=hp;i++){
				if(hp%i==0)
				break;
			}
			if(hp==i){
				P1=1000;
				P2=(hp+s)%1000;
			}
			else {
				P1=hp;P2=(hp+d)%100;	
			}
			while(c<(s+d)){
				c=a+b;
				a=b;
				b=c;
			}
			if(d<200){
				if(c!=(s+d))
				f=0;
				else{
				m=s%6;
				switch(m){
					case 0:
						g=s/2;
						break;
					case 1:
						g=2*s;
						break;	
					case 2:
						g=-(s%9)*(s%9)*(s%9)/5;
						break;
					case 3:
						g=-(s%30)*(s%30)+3*s;
						break;
					case 4:
						g=-s;
						break;
					case 5:
						n=s%5+5;
						T=n*(n+1)/2;
						g=-T;
						break;																											
					}
				f=40-abs(d-500.0)/20.0+g;
				}	
			}
			else if(d<=800){
				m=s%6;
				switch(m){
					case 0:
						g=s/2;
						break;
					case 1:
						g=2*s;
						break;	
					case 2:
						g=-(s%9)*(s%9)*(s%9)/5;
						break;
					case 3:
						g=-(s%30)*(s%30)+3*s;
						break;
					case 4:
						g=-s;
						break;
					case 5:
						n=s%5+5;
						T=n*(n+1)/2;
						g=-T;
						break;																											
					}
				f=40-abs(d-500.0)/20.0+g;				
			}
			else if(d>800){
				f=-d*s/1000.0;
			}
			pR=(P1+P2*f)/(1000+abs(P2*f));
			if(d>=200 &&d<=300){
				float rc;rc=(d+P1+P2)/1000.0;
				if(rc>0.8) pR=0;
			}
			if(pR>1)
			pR=1;
			else if(pR<0)
			pR=0;
			else
			pR=round(pR*1000)/1000;
}
//Output result	cout<<"\nP1="<<P1<<"\nP1="<<P2<<"\nf="<<f<<endl;
display(pR);
}
